<Project>
    <!-- 元数据处理器：从 NuGet 包名提取第一个单词 -->
    <ItemDefinitionGroup>
        <NuGetDependencies>
            <FirstFolder>$([System.Text.RegularExpressions.Regex]::Match('%(NuGetPackageId)', '^([^.]+)').Groups[1].Value)</FirstFolder>
        </NuGetDependencies>
    </ItemDefinitionGroup>
</Project>